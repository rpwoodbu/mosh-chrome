{
  "manifest_version": 2,
  "minimum_chrome_version": "31",
  "name": "${NAME}",
  "description": "${DESCRIPTION}",
  "offline_enabled": true,
  "version": "0.2.9.${BUILD_NUM}",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"socket": [
      "resolve-host",
      "tcp-connect",
      "udp-bind",
      "udp-send-to"
    ]},
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "notifications",
    "storage",
    "app.window.fullscreen.overrideEsc"
  ],
  "icons": {
    "128": "laptop_terminal.png"
  }
}
